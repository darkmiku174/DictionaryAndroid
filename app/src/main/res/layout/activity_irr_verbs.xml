<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <LinearLayout
        android:id="@+id/view_contain"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <TextView
            android:layout_width="146dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_margin="2dp"
            android:background="@color/light_red"
            android:gravity="center"
            android:text="Present Simple"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="17sp"
            android:textStyle="bold" />

        <TextView
            android:layout_margin="2dp"
            android:layout_width="126dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:text="Past Simple"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textSize="17sp"
            android:background="@color/light_red"
            android:textColor="@color/white"/>

        <TextView
            android:layout_width="126dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_margin="2dp"
            android:background="@color/light_red"
            android:gravity="center"
            android:text="Past Participle"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="17sp"
            android:textStyle="bold" />
    </LinearLayout>

    <GridView
        android:id="@+id/gv_irrverb"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/view_contain"
        android:layout_alignParentStart="true"
        android:background="@color/white"
        android:horizontalSpacing="5dp"
        android:numColumns="3"
        android:verticalSpacing="5dp" />

</RelativeLayout>
    <!--tạo layout cho sự kiến click các fragment (chức năng) trên drawer navigation-->
    <!--cần thêm 4 cái -->