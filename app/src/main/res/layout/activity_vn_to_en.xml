<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <TextView
        android:id="@+id/txt_tuvung"
        android:layout_width="369dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="45dp"
        android:text="Từ vựng here"
        android:textColor="@color/dark_blue"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txt_description"
        android:layout_width="370dp"
        android:layout_height="423dp"
        android:text="description here"
        android:textColor="#000000"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.902"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_tuvung" />
    <ImageButton
        android:id="@+id/btn_favorite"
        android:layout_width="48dp"
        android:layout_height="43dp"
        android:layout_marginStart="308dp"
        android:background="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/txt_tuvung"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/ic_volumn" />

    <ImageButton
        android:id="@+id/btn_speak"
        android:layout_width="48dp"
        android:layout_height="43dp"
        android:background="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/txt_tuvung"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.8"
        app:layout_constraintStart_toEndOf="@+id/btn_favorite"
        app:srcCompat="@drawable/ic_star_black_normal" />

</androidx.constraintlayout.widget.ConstraintLayout>
    <!--tạo layout cho sự kiến click các fragment (chức năng) trên drawer navigation-->
